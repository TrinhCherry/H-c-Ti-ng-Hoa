    <script>
        // D·ªØ li·ªáu t·ª´ v·ª±ng v√† m·∫´u c√¢u
        const data = {
            vocabulary: [
                { hanzi: "‰Ω†Â•Ω", pinyin: "n«ê h«éo", meaning: "Xin ch√†o" },
                { hanzi: "Ë∞¢Ë∞¢", pinyin: "xi√® xie", meaning: "C·∫£m ∆°n" },
                { hanzi: "ÂÜçËßÅ", pinyin: "z√†i ji√†n", meaning: "T·∫°m bi·ªát" },
                { hanzi: "Áà±", pinyin: "√†i", meaning: "Y√™u" },
                { hanzi: "Â≠¶‰π†", pinyin: "xu√© x√≠", meaning: "H·ªçc t·∫≠p" },
                { hanzi: "ÊúãÂèã", pinyin: "p√©ng you", meaning: "B·∫°n b√®" },
                { hanzi: "ËÄÅÂ∏à", pinyin: "l«éo shƒ´", meaning: "Gi√°o vi√™n" },
                { hanzi: "Â≠¶Áîü", pinyin: "xu√© sheng", meaning: "H·ªçc sinh" },
            ],
            phrases: [
                { hanzi: "‰Ω†Â•ΩÂêóÔºü", pinyin: "N«ê h«éo ma?", meaning: "B·∫°n c√≥ kh·ªèe kh√¥ng?" },
                { hanzi: "ÊàëÁà±‰Ω†„ÄÇ", pinyin: "W«í √†i n«ê.", meaning: "T√¥i y√™u b·∫°n." },
                { hanzi: "ËØ∑ÈóÆÔºåËøôÊòØ‰ªÄ‰πàÔºü", pinyin: "Q«êng w√®n, zh√® sh√¨ sh√©n me?", meaning: "Xin h·ªèi, ƒë√¢y l√† c√°i g√¨?" },
                { hanzi: "ÂæàÈ´òÂÖ¥ËÆ§ËØÜ‰Ω†„ÄÇ", pinyin: "Hƒõn gƒÅo x√¨ng r√®n sh√≠ n«ê.", meaning: "R·∫•t vui ƒë∆∞·ª£c l√†m quen v·ªõi b·∫°n." },
                { hanzi: "‰Ω†Âè´‰ªÄ‰πàÂêçÂ≠óÔºü", pinyin: "N«ê ji√†o sh√©n me m√≠ng z√¨?", meaning: "B·∫°n t√™n l√† g√¨?" },
            ]
        };

        let currentQuizIndex = 0;
        let quizData = [];
        const sections = ['intro', 'vocabulary', 'phrases', 'quiz'];

        // L·∫•y c√°c ph·∫ßn t·ª≠ DOM
        const vocabularyList = document.getElementById('vocabulary-list');
        const phrasesList = document.getElementById('phrases-list');
        const quizQuestionEl = document.getElementById('quiz-question');
        const quizOptionsEl = document.getElementById('quiz-options');
        const quizFeedbackEl = document.getElementById('quiz-feedback');
        const messageBox = document.getElementById('message-box');
        const messageText = document.getElementById('message-text');

        // H√†m hi·ªÉn th·ªã h·ªôp th√¥ng b√°o
        function showMessageBox(message) {
            messageText.textContent = message;
            messageBox.classList.remove('hidden');
        }

        // H√†m ·∫©n h·ªôp th√¥ng b√°o
        function hideMessageBox() {
            messageBox.classList.add('hidden');
        }

        // H√†m chuy·ªÉn ƒë·ªïi gi·ªØa c√°c ph·∫ßn n·ªôi dung
        function showSection(sectionId) {
            sections.forEach(id => {
                const section = document.getElementById(`${id}-section`);
                if (section) {
                    section.classList.add('hidden');
                }
            });
            const selectedSection = document.getElementById(`${sectionId}-section`);
            if (selectedSection) {
                selectedSection.classList.remove('hidden');
            }

            if (sectionId === 'quiz') {
                prepareQuiz();
            }
        }

        // H√†m ph√°t √¢m t·ª´/c√¢u ti·∫øng Hoa
        function speak(text) {
            if (!window.speechSynthesis) {
                showMessageBox("Tr√¨nh duy·ªát c·ªßa b·∫°n kh√¥ng h·ªó tr·ª£ t√≠nh nƒÉng ph√°t √¢m.");
                return;
            }
            const utterance = new SpeechSynthesisUtterance(text);
            utterance.lang = 'zh-CN'; // ƒê·∫∑t ng√¥n ng·ªØ l√† ti·∫øng Trung
            window.speechSynthesis.speak(utterance);
        }

        // H√†m t·∫°o n·ªôi dung cho ph·∫ßn t·ª´ v·ª±ng
        function renderVocabulary() {
            vocabularyList.innerHTML = '';
            data.vocabulary.forEach(item => {
                const card = document.createElement('div');
                card.className = 'bg-gray-50 p-4 rounded-xl shadow-sm flex items-center justify-between';
                card.innerHTML = `
                    <div>
                        <p class="text-xl font-bold text-sky-700">${item.hanzi}</p>
                        <p class="text-base text-gray-500">${item.pinyin}</p>
                        <p class="text-sm text-gray-800 mt-1">${item.meaning}</p>
                    </div>
                    <button onclick="speak('${item.hanzi}')" class="text-sky-500 hover:text-sky-700 transition">
                        <i class="fas fa-volume-up text-2xl"></i>
                    </button>
                `;
                vocabularyList.appendChild(card);
            });
        }

        // H√†m t·∫°o n·ªôi dung cho ph·∫ßn m·∫´u c√¢u
        function renderPhrases() {
            phrasesList.innerHTML = '';
            data.phrases.forEach(item => {
                const card = document.createElement('div');
                card.className = 'bg-gray-50 p-4 rounded-xl shadow-sm flex items-center justify-between';
                card.innerHTML = `
                    <div>
                        <p class="text-xl font-bold text-emerald-700">${item.hanzi}</p>
                        <p class="text-base text-gray-500">${item.pinyin}</p>
                        <p class="text-sm text-gray-800 mt-1">${item.meaning}</p>
                    </div>
                    <button onclick="speak('${item.hanzi}')" class="text-emerald-500 hover:text-emerald-700 transition">
                        <i class="fas fa-volume-up text-2xl"></i>
                    </button>
                `;
                phrasesList.appendChild(card);
            });
        }

        // H√†m chu·∫©n b·ªã d·ªØ li·ªáu cho quiz
        function prepareQuiz() {
            // K·∫øt h·ª£p t·ª´ v·ª±ng v√† m·∫´u c√¢u ƒë·ªÉ t·∫°o c√¢u h·ªèi
            const allItems = [...data.vocabulary, ...data.phrases];
            // X√°o tr·ªôn m·∫£ng c√¢u h·ªèi
            quizData = allItems.sort(() => Math.random() - 0.5);
            currentQuizIndex = 0;
            quizFeedbackEl.textContent = '';
            nextQuestion();
        }

        // H√†m hi·ªÉn th·ªã c√¢u h·ªèi ti·∫øp theo
        function nextQuestion() {
            if (currentQuizIndex >= quizData.length) {
                showMessageBox("B·∫°n ƒë√£ ho√†n th√†nh t·∫•t c·∫£ c√°c c√¢u h·ªèi!");
                currentQuizIndex = 0;
                prepareQuiz(); // B·∫Øt ƒë·∫ßu l·∫°i quiz
                return;
            }

            const currentItem = quizData[currentQuizIndex];
            quizQuestionEl.textContent = currentItem.hanzi;
            quizFeedbackEl.textContent = '';
            quizOptionsEl.innerHTML = '';

            // T·∫°o c√°c l·ª±a ch·ªçn
            const options = getQuizOptions(currentItem.meaning);
            options.forEach(option => {
                const button = document.createElement('button');
                button.textContent = option;
                button.className = 'py-3 px-4 bg-gray-200 hover:bg-gray-300 rounded-xl transition text-gray-700 font-medium';
                button.onclick = () => checkAnswer(option, currentItem.meaning);
                quizOptionsEl.appendChild(button);
            });

            currentQuizIndex++;
        }

        // H√†m t·∫°o c√°c l·ª±a ch·ªçn ƒë√°p √°n (bao g·ªìm 1 ƒë√°p √°n ƒë√∫ng v√† 3 ƒë√°p √°n sai)
        function getQuizOptions(correctAnswer) {
            const allMeanings = [...data.vocabulary.map(item => item.meaning), ...data.phrases.map(item => item.meaning)];
            
            // L·ªçc ra c√°c ƒë√°p √°n sai
            const incorrectOptions = allMeanings.filter(meaning => meaning !== correctAnswer);
            
            // Ch·ªçn ng·∫´u nhi√™n 3 ƒë√°p √°n sai
            const shuffledIncorrect = incorrectOptions.sort(() => Math.random() - 0.5).slice(0, 3);
            
            // K·∫øt h·ª£p ƒë√°p √°n ƒë√∫ng v√† ƒë√°p √°n sai, sau ƒë√≥ x√°o tr·ªôn
            const options = [correctAnswer, ...shuffledIncorrect];
            return options.sort(() => Math.random() - 0.5);
        }

        // H√†m ki·ªÉm tra ƒë√°p √°n
        function checkAnswer(selectedOption, correctAnswer) {
            if (selectedOption === correctAnswer) {
                quizFeedbackEl.textContent = "ƒê√∫ng r·ªìi! üéâ";
                quizFeedbackEl.className = 'mt-4 text-center text-lg font-bold text-green-600';
            } else {
                quizFeedbackEl.textContent = `Sai r·ªìi. ƒê√°p √°n ƒë√∫ng l√†: "${correctAnswer}"`;
                quizFeedbackEl.className = 'mt-4 text-center text-lg font-bold text-red-600';
            }
        }

        // Ch·∫°y c√°c h√†m kh·ªüi t·∫°o khi trang t·∫£i
        window.onload = function() {
            renderVocabulary();
            renderPhrases();
            showSection('intro');
        };
    </script>
